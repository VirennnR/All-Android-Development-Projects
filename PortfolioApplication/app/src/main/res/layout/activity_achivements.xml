<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".AchivementsActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="â€¢ ACHIEVEMENTS"
        android:textSize="34sp"
        android:padding="10dp"
        android:background="#FFF"
        android:elevation="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Olympiad"
        android:textSize="27sp"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:fontFamily="sans-serif-medium"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="30dp"
            android:text="International Cyber Olympiad"
            android:textSize="22sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="World Rank - 89"
            android:paddingStart="17dp"
            android:textSize="18sp"
            android:textStyle="normal"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Exam"
        android:textSize="27sp"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:fontFamily="sans-serif-medium"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="30dp"
            android:text="All India Byju's"
            android:textSize="22sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="School Rank - 1"
            android:paddingStart="22dp"
            android:textSize="18sp"
            android:textStyle="normal"/>
    </LinearLayout>


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Badminton"
        android:textSize="27sp"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:fontFamily="sans-serif-medium"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="30dp"
            android:text="National Level"
            android:textSize="22sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gold Medal"
            android:paddingStart="50dp"
            android:textSize="18sp"
            android:textStyle="normal"/>
    </LinearLayout>


</LinearLayout>